(4, 3, 102, '2024-02-10');

‚úÖ1. Show all students
SELECT * FROM students;

‚úÖ 2. Students with their enrolled courses
SELECT s.student_name, c.course_name
FROM students s
JOIN enrollments e ON s.student_id = e.student_id
JOIN courses c ON e.course_id = c.course_id;

‚úÖ 3. Count students in each course
SELECT c.course_name, COUNT(e.student_id) AS total_students
FROM courses c
LEFT JOIN enrollments e ON c.course_id = e.course_id
GROUP BY c.course_name;

‚úÖ 4. Students from Pune
SELECT * FROM students WHERE city = 'Pune';

‚úÖ 5. Most expensive course
SELECT * FROM courses
ORDER BY fees DESC
LIMIT 1;
üëÅÔ∏è Create a View
CREATE VIEW student_course_view AS
SELECT s.student_name, c.course_name, e.enrollment_date
FROM students s
JOIN enrollments e ON s.student_id = e.student_id
JOIN courses c ON e.course_id = c.course_id;

SELECT * FROM student_course_view;
